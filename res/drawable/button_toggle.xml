<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
          android:drawable="@drawable/button_toggle_unchecked" /> <!-- pressed -->
    <item android:state_selected="true"
          android:drawable="@drawable/button_toggle_unchecked" /> <!-- selected -->
    <item android:state_focused="true"
          android:drawable="@drawable/button_toggle_unchecked" /> <!-- focused -->
    <item android:state_enabled="false"
          android:drawable="@drawable/button_toggle_unchecked" /> <!-- focused -->
    <item android:state_checked="true"
    		android:drawable="@drawable/button_toggle_checked"/>
    <item android:state_checked="false"
    		android:drawable="@drawable/button_toggle_unchecked"/>
          
    <item android:drawable="@drawable/button_toggle_checked" /> <!-- default -->
</selector>